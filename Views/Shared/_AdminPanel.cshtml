<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - PetaByte(Temiskaming Hospital)</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.8.3.js"></script>
    <link href="~/Content/admin.css" rel="stylesheet" type="text/css" />
</head>
<body>
    <div class="">
        <div class="wrapper">
            <div class="form-horizontal">
                @if (Session["username"] != null)
                {
                    <h2 class="signinLbl text-center">Hello @Session["username"].ToString()</h2>
                }
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-xs-3 col-md-4">
                           <h3 class="dark-blue">Dashboard</h3>
                            <div class="distance">
                                @Html.ActionLink("Dashboard Home", "AdminPanel", "Account")
                            </div>
                            <div class="distance">
                                @Html.ActionLink("Donor Profiles", "DonorProfiles", "Account")
                            </div>
                            <div class="distance">
                                @Html.ActionLink("Gift Shop", "GiftShop", "Account")
                            </div>
                           <div class="distance">
                               @Html.ActionLink("Update Contact Information", "ContactEdit", "Account", new { userId = Session["userId"] })
                           </div> 
                           <div class="distance">
                                @Html.ActionLink("Logout", "Logout", "Account")
                           </div>
                        </div>
                        <div class="col-xs-9 col-md-8 text-center">
                            @RenderBody()
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div id="footer">
            <div class="wrapper row">
            </div>
        </div>
    </div>

    <script src="~/Scripts/jquery-3.1.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    @RenderSection("Ajax", required: false);
</body>
</html>
