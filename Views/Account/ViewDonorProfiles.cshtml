@model IEnumerable<$safeprojectname$.Models.DonationProfile>

@{
    ViewBag.Title = "ViewDonorProfiles";
    Layout = "~/Views/Shared/_AdminPanel.cshtml";
}


<h3 class="dark-blue">View Donor Profiles</h3>
<div class="form-horizontal text-center">
    <table>
        <tr>
            <th class="text-center distance">
                @Html.DisplayNameFor(model => model.donationMessage)
            </th>
            <th class="text-center distance">
                Donor Name
            </th>
            <th></th>
            <th></th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td class="distance">
                    @Html.DisplayFor(modelItem => item.donationMessage)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Donation.donorFN) @Html.DisplayNameFor(model => model.Donation.donorLN)
                </td>
                <td class="crud">
                    @Html.ActionLink("Edit","EditDonorProfiles", "Account", new { id = item.donationProfileId }, htmlAttributes: new { @class = "button-edit" } )
                    
                </td>
                <td class="crud">
                    @Html.ActionLink("Delete", "DeleteDonorProfiles", "Account", new { id = item.donationProfileId }, htmlAttributes: new { @class = "button-delete" })
                </td>
            </tr>
        }
    </table>
</div>